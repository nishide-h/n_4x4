<p id="notice"><%= notice %></p>
<div id="radio_mode">
  <label><%= radio_button("page", :mode, 1, checked: true) %> 登録＞</label>
  <label><%= radio_button("page", :mode, 2) %> 選択-重要＞</label>
  <label><%= radio_button("page", :mode, 3) %> 選択-緊急＞</label>
  <label><%= radio_button("page", :mode, 4) %> 選択-依頼</label>
</div>
<div class="container">
  <div class="header">
    <p>
      <%= @sheet.created_at.strftime("%Y/%m/%d") %>
      <br>
      <br>
      <%= @sheet.title %>
    </p>
  </div>
  <% @sheet.tasks.each do |task| %>
    <div class="task">
      <%= task.name %>
    </div>
  <% end %>
</div>
<% if @sheet.tasks.count < 15 %>
  <%= link_to 'New Task', new_sheet_task_path(@sheet) %>
<% end %>
<%= link_to 'Edit', edit_sheet_path(@sheet) %> |
<%= link_to 'Back', sheets_path %>
